{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "dev": "tsc -b --watch",
    "lint": "eslint --ext .js,.ts packages",
    "release": "npm run lint && npm test && npm run clean && npm run build && lerna publish",
    "test": "jest",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,md,yml}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@commitlint/config-lerna-scopes": "^12.1.1",
    "@meteorlxy/eslint-config-prettier": "^2.0.0",
    "@meteorlxy/eslint-config-prettier-typescript": "^2.1.0",
    "@meteorlxy/prettier-config": "^2.0.0",
    "@types/jest": "^26.0.22",
    "eslint": "^7.24.0",
    "eslint-plugin-jest": "^24.3.4",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.49.0",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.4"
  }
}
